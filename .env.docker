# Docker Environment Variables for Joti Threat Intelligence Platform
# Copy this to .env when deploying with Docker

# Database Configuration
POSTGRES_USER=joti_user
POSTGRES_PASSWORD=joti_secure_password_12345
POSTGRES_DB=joti_db
DATABASE_URL=postgresql://joti_user:joti_secure_password_12345@postgres:5432/joti_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Backend Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-strong-random-string
DEBUG=false
ENV=production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,http://127.0.0.1:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NODE_ENV=production

# GenAI Configuration (Optional)
# Uncomment and configure if using GenAI features
# GENAI_PROVIDER=ollama
# OLLAMA_BASE_URL=http://ollama:11434
# OLLAMA_MODEL=llama2

# Automation Scheduler
ENABLE_AUTOMATION_SCHEDULER=true
