# Development Dockerfile for frontend with hot reload
FROM node:20-alpine

RUN addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./
RUN npm install && chown -R appuser:appgroup /app

# Copy source files (will be overwritten by volume mount)
COPY --chown=appuser:appgroup . .

USER appuser

EXPOSE 3000

# Use React development server with hot reload
CMD ["npm", "start"]
